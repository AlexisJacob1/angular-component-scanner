{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ES2020"
		],
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"resolveJsonModule": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"files": [],
	"references": [
		{
			"path": "./packages/core"
		},
		{
			"path": "./packages/cli"
		}
	]
}